{
  "manifest_version": 3,
  "name": "Activity Recorder",
  "version": "1.0.0",
  "description": "Automatically record and analyze your computer activities with AI-powered insights",
  "permissions": [
    "storage",
    "alarms",
    "nativeMessaging"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [],
  "optional_permissions": []
}
